name: Deploy Mule App to PROD

on:
  workflow_run:
    workflows: ["Deploy Mule App to QA"]
    types:
      - completed

jobs:
  deploy-to-prod:
    if: ${{ github.event.workflow_run.conclusion == 'success' }}
    runs-on: ubuntu-latest
    environment:
      name: prod
      url: https://anypoint.mulesoft.com

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Set up JDK 8
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '8'

      - name: Cache Maven packages
        uses: actions/cache@v4
        with:
          path: ~/.m2/repository
          key: ${{ runner.os }}-maven-${{ hashFiles('**/pom.xml') }}
          restore-keys: |
            ${{ runner.os }}-maven-

      # Download the exact artifact built in QA
      - name: Download build artifact
        uses: actions/download-artifact@v4
        with:
          name: mule-artifact
          path: target/

      - name: Deploy to CloudHub PROD
        run: |
          mvn mule:deploy \
            -DmuleDeploy \
            -DconnectedAppClientId=${{ secrets.ANYPOINT_CLIENT_ID_PROD }} \
            -DconnectedAppClientSecret=${{ secrets.ANYPOINT_CLIENT_SECRET_PROD }} \
            -Danypoint.environment=prod \
            -Dapp.name=hospital-locator-api

  rollback:
    if: failure()   # ðŸ‘ˆ only runs if deploy-to-prod job fails
    runs-on: ubuntu-latest
    needs: deploy-to-prod
    environment:
      name: prod
      url: https://anypoint.mulesoft.com

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Set up JDK 8
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '8'

      # Fetch last successful PROD artifact
      - name: Download previous PROD artifact
        uses: dawidd6/action-download-artifact@v6
        with:
          workflow: mule-deploy-prod.yml
          branch: main
          name: mule-artifact
          path: rollback/

      - name: Rollback Deploy
        run: |
          mvn mule:deploy \
            -DmuleDeploy \
            -DconnectedAppClientId=${{ secrets.ANYPOINT_CLIENT_ID_PROD }} \
            -DconnectedAppClientSecret=${{ secrets.ANYPOINT_CLIENT_SECRET_PROD }} \
            -Danypoint.environment=prod \
            -Dapp.name=hospital-locator-api \
            -DmuleDeployArtifact=rollback/*.jar
